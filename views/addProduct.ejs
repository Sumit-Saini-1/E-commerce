<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <link rel="stylesheet" href="/addProduct.css" />
</head>
<body>
    <%- include("component/sellerHeader") %>
    <div class="container">
        <form id="addProductform">
            <div class="formelement">
                <label for="productName">Product Name</label>
                <input type="text" name="productName" id="productName" placeholder="Product Name">
            </div>
            <div class="formelement">
                <label for="productDescription">Product Description</label>
                <input type="text" name="productDescription" id="productDescription" placeholder="Product Description">
            </div>
            <div class="formelement">
                <label for="productPrice">Product Price</label>
                <input type="number" name="productPrice" id="productPrice" placeholder="Product Price">
            </div>
            <div class="formelement">
                <label for="productQuantity">Product Quantity</label>
                <input type="number" name="productQuantity" id="productQuantity" placeholder="Product Quantity">
            </div>
            <div class="formelement">
                <label for="productBrand">Product Brand</label>
                <input type="text" name="productBrand" id="productBrand" placeholder="Product Brand">
            </div>
            <div class="formelement">
                <label for="productCategory">Product Category</label>
                <input type="text" name="productCategory" id="productCategory" placeholder="Product Category">
            </div>
            <div class="formelement">
                <label for="productImage">Product Image</label>
                <input type="file" id="productImage" name="productImage"/>
            </div>
            <div class="formelement">
                <input type="submit" value="Add" id="addProductSubmit"/>
            </div>
        </form>
    </div>
    <script src="/addProduct.js"></script>
</body>
</html>